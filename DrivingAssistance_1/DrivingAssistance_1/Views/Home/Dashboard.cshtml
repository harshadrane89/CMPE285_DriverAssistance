                     @Html.DisplayTextFor(m => m.directionsScript)


                    google.maps.event.addDomListener(window, 'load', init);
                </script>
                }   
                    
              

              
  
            
            


        
    <script src="scripts/jquery-1.9.1.min.js"></script>
